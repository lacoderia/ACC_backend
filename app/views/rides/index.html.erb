<h1>Listing rides</h1>

<table>
  <thead>
    <tr>
      <th>Agreement</th>
      <th>User</th>
      <th>When</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Cost</th>
      <th>Seats</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.agreement_id %></td>
        <td><%= ride.user_id %></td>
        <td><%= ride.ride_when %></td>
        <td><%= ride.origin %></td>
        <td><%= ride.destination %></td>
        <td><%= ride.cost %></td>
        <td><%= ride.seats %></td>
        <td><%= ride.notes %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

